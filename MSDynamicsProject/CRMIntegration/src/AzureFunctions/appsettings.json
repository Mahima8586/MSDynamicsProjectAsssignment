{
    "IsEncrypted": false,
    "Values": {
        "AzureWebJobsStorage": "UseDevelopmentStorage=true",
        "FUNCTIONS_WORKER_RUNTIME": "dotnet",

        "ExternalApiUrl": "https://mockapi.example.com/receiveOrder",
        "ApiKey": "your-secure-api-key",

        "DataverseUrl": "https://mahima-verma.dynamics.com",
        "DataverseClientId": "your-client-id",
        "DataverseClientSecret": "your-client-secret",
        "DataverseTenantId": "your-tenant-id"
    }
}


//Explanation of appsettings.json
//
//AzureWebJobsStorage	 ---  ---Required for Azure Functions to store logs and runtime states.
//FUNCTIONS_WORKER_RUNTIME---	Defines the function runtime (use "dotnet" for C#).
//ExternalApiUrl====	Stores the mock external API URL that will receive order data.
//ApiKey	===Secure API Key for authentication when calling the external API.
//DataverseUrl	===URL of the Dynamics 365 CRM instance (Dataverse).
//DataverseClientId	==OAuth Client ID for Dataverse API authentication.
//DataverseClientSecret ==	Secret key for authenticating API requests.
//DataverseTenantId	===Azure AD Tenant ID for Dataverse authentication.
